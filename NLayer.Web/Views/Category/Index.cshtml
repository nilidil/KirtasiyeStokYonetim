@model List<NLayer.Core.DTOs.CategoryWithProductsDto>
<div class="row">
    <div class="col-sm-6 col-md-6">
        <h3>Kategori Yönetimi</h3>
    </div>
    <div class="col-sm-6 col-md-6">
        <a class="btn btn-primary float-end" href="/Category/Create">Kategori Ekle</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12 col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori Ad</th>
                    <th>Ürün Adedi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Products.Count</td>

                        <td width="80">
                            <div class="btn-group btn-group-sm">
                                <a class="btn btn-xs btn-primary" href="/Category/Edit/@category.Id"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-xs btn-danger" href="/Category/Delete/@category.Id"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script>

    </script>
}